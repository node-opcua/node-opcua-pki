{
  "name": "node-opcua-pki",
  "version": "2.2.2",
  "description": "PKI management for node-opcua",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npx tsc -b -f",
    "test": "npx mocha -t 700000 test/**/*.ts",
    "cover": "npx nyc -x  bin -x tmp -x lib/misc/install* mocha",
    "cost-of-modules": "npx cost-of-modules --no-install",
    "release-it": "npx release-it",
    "ncu": "npx npm-check-updates -u --semverLevel minor",
    "pkg": "npx pkg -o pkg/pki bin/crypto_create_CA.js",
    "tslint": "npx tslint -c tslint.json lib/**/*.ts"
  },
  "pkg": {
    "scripts": "build/**/*.js",
    "assets": "./bin/crypto_create_CA_config.example.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/node-opcua/node-opcua-pki.git"
  },
  "bugs": {
    "url": "https://github.com/node-opcua/node-opcua-pki/issues"
  },
  "keywords": [
    "PKI",
    "node-opcua"
  ],
  "author": "Etienne Rossignon",
  "license": "MIT",
  "dependencies": {
    "async": "^3.2.0",
    "better-assert": "^1.0.2",
    "byline": "^5.0.0",
    "chalk": "^4.1.0",
    "chokidar": "^3.4.2",
    "cli-spinner": "^0.2.10",
    "cli-table": "^0.3.1",
    "del": "5.1.0",
    "node-opcua-crypto": "^1.4.1",
    "progress": "^2.0.3",
    "rimraf": "^3.0.2",
    "thenify": "^3.3.1",
    "update-notifier": "4.1.3",
    "walk": "^2.3.14",
    "wget-improved": "^3.2.1",
    "yargs": "15.4.1",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/async": "^3.2.3",
    "@types/byline": "^4.2.32",
    "@types/cli-spinner": "^0.2.0",
    "@types/cli-table": "^0.3.0",
    "@types/del": "^4.0.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.8",
    "@types/node-dir": "0.0.33",
    "@types/progress": "^2.0.3",
    "@types/rimraf": "^3.0.0",
    "@types/sinon": "^9.0.8",
    "@types/underscore": "^1.10.24",
    "@types/yargs": "^15.0.8",
    "@types/yauzl": "^2.9.1",
    "mocha": "^8.1.3",
    "node-dir": "^0.1.17",
    "nyc": "^15.1.0",
    "should": "^13.2.3",
    "sinon": "^9.2.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  },
  "bin": {
    "pki": "./bin/crypto_create_CA.js"
  }
}
