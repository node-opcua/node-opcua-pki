{
  "name": "node-opcua-pki",
  "version": "5.5.0",
  "description": "PKI management for node-opcua",
  "type": "commonjs",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "scripts": {
    "build": "npx tsc -b -f",
    "clean": "npx rimraf node_modules .nyc_output tmp private_key.pem certificates",
    "test": "mocha -r ./node_modules/source-map-support/register -t 700000 test/**/*.ts",
    "cover": "npx nyc -x  bin -x tmp -x lib/misc/install* mocha",
    "cost-of-modules": "npx cost-of-modules --no-install",
    "release-it": "npx release-it",
    "ncu": "npx npm-check-updates -u -x rimraf,env-paths,chalk,yargs,update-notifier,@types/node     ",
    "ncu2": "npx npm-check-updates -u -f rimraf,env-paths,chalk,yargs,update-notifier,@types/node -t minor",
    "pkg": "npx pkg -o pkg/pki bin/crypto_create_CA.cjs",
    "tslint": "npx tslint -c tslint.json lib/**/*.ts",
    "postinstall2": "opencollective-postinstall",
    "postinstall3": "github-sponsors",
    "makelinks": "npx tsx ../make-links/makelinks.ts",
    "prepublishOnly": "node scripts/prepare-publish.cjs clean",
    "postpublish": "node scripts/prepare-publish.cjs restore",
    "pack:clean": "node scripts/prepare-publish.cjs clean && npm pack && node scripts/prepare-publish.cjs restore"
  },
  "files": [
      "dist/**/*.js",
      "dist/**/*.d.ts",
      "bin/**/*.js",
      "bin/**/*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/node-opcua/node-opcua-pki.git"
  },
  "bugs": {
    "url": "https://github.com/node-opcua/node-opcua-pki/issues"
  },
  "keywords": [
    "PKI",
    "node-opcua"
  ],
  "collective": {
    "url": "https://opencollective.com/node-opcua"
  },
  "author": "Etienne Rossignon",
  "license": "MIT",
  "dependencies": {
    "@ster5/global-mutex": "^2.0.0",
    "byline": "^5.0.0",
    "chalk": "4.1.2",
    "chokidar": "5.0.0",
    "node-opcua-crypto": "4.16.1",
    "progress": "^2.0.3",
    "rimraf": "4.4.1",
    "wget-improved-2": "^3.3.0",
    "yargs": "17.7.2",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "@types/async": "^3.2.25",
    "@types/byline": "^4.2.36",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.4",
    "@types/node-dir": "0.0.37",
    "@types/progress": "^2.0.7",
    "@types/rimraf": "^4.0.5",
    "@types/sinon": "^21.0.0",
    "@types/yargs": "^17.0.35",
    "@types/yauzl": "^2.10.3",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "node-dir": "^0.1.17",
    "should": "^13.2.3",
    "sinon": "^21.0.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "bin": {
    "pki": "./bin/crypto_create_CA.cjs"
  }
}
