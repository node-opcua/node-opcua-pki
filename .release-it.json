{
  "src": {
    "tagName": "v%s"
  },
  "dist": {
    "base": "dist"
  },
  "git": {
    "requireBranch": "master",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": [
      "npm run build"
    ],
    "after:bump": "npx auto-changelog -p"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  },
  "increment": "minor"
}